{
  "version": "0.1.0",
  "tasks": [
    {
      "command": "g++",
      "taskName": "build",
      "showOutput": "silent",
      "problemMatcher": [
        "$tsc",
        "$lessCompile"
      ],
      "isBuildCommand": true,
      "args": [
        "-g",
        "test.cpp",
        "-o",
        "a.exe"
      ]
    },
    {
      "command": "./a.exe",
      "taskName": "run",
      "showOutput": "always",
      "isTestCommand": true
    }
  ]
}